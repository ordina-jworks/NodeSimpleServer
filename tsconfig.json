{
  "compileOnSave": true,
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "types": [
      "node",
      "mime",
      "johnny-five",
      "serialport",
      "chai",
      "sinon",
      "sinon-chai"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.test.ts"
  ],
  "files": [
    "test-config/test.ts"
  ]
}