{
  "name": "NodeSimpleServer",
  "author": "beele <kevin.vandenabeele@ordina.be>",
  "version": "0.1.0",
  "private": true,

  "scripts": {
    "postinstall": "npm install forever -g && npm install -g bower && npm install typescript -g",
    "build": "tsc -p ./",
    "prestart": "bower install --allow-root && tsc -p ./",
    "dev-test-watch": "mocha-typescript-watch -o ./test-config/mocha.opts",
    "start": "forever --minUptime 10000 -o output.log src/app.js",
    "stop": "forever stopall"
    "test": "tsc -p . && mocha --opts ./test-config/mocha.opts"
  },

  "dependencies": {
    "typescript": "^2.1.6",

    "@types/node": "^0.0.2",
    "@types/mime": "^0.0.29",
    "@types/johnny-five": "^0.0.31",
    "@types/serialport": "^4.0.8",
    "@types/socket.io": "^1.4.29",

    "mime": "^1.3.4",
    "johnny-five": "^0.10.6",
    "serialport": "^4.0.7",
    "socket.io": "^1.7.3"
  },
  
    "devDependencies": {
      "@types/chai": "^3.4.34",
      "@types/sinon": "^1.16.34",
      "@types/sinon-chai": "^2.7.27",
      
      "chai": "^3.5.0",
      "sinon": "^1.17.7",
      "sinon-chai": "^2.8.0",
      
      "mocha": "^3.2.0",
      "mocha-typescript": "^1.0.15"
    }
}
