{
  "name": "NodeSimpleServer",
  "author": "beele <kevin.vandenabeele@ordina.be>",
  "version": "0.1.0",
  "private": true,

  "scripts": {
    "postinstall": "npm install forever -g && npm install -g bower && npm install typescript -g",
    "build": "tsc -p ./",
    "prestart": "bower install --allow-root && tsc -p ./",
    "start": "forever --minUptime 10000 -o output.log src/app.js",
    "stop": "forever stopall",
    "test": "tsc -p . && mocha --opts ./test-config/mocha.opts",
    "dev-test-watch": "mocha-typescript-watch -o ./test-config/mocha.opts",
    "create-docker": "docker build -t node-simple-server .",
    "run-docker": "docker run -it -p 7080:7080 -p 7081:7081 node-simple-server"
  },

  "dependencies": {
    "typescript": "^2.1.6",

    "@types/node": "^0.0.2",
    "@types/mime": "^0.0.29",
    "@types/johnny-five": "^0.0.31",
    "@types/serialport": "^4.0.8",
    "@types/ws": "^0.0.39",
    "@types/mocha" : "^2.2.41",
    "@types/chai": "^3.4.34",
    "@types/sinon": "^1.16.34",
    "@types/sinon-chai": "^2.7.27",

    "chai": "^3.5.0",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "mocha": "^3.3.0",
    "mocha-typescript": "^1.1.0",

    "mime": "^1.3.4",
    "johnny-five": "^0.10.6",
    "serialport": "^4.0.7",
    "ws": "^2.2.3"
  },

  "engines": {
    "node": "7.8.0",
    "npm": "4.2.0"
  }
}
