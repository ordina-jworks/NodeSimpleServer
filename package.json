{
  "name": "NodeSimpleServer",
  "author": "beele <kevin.vandenabeele@ordina.be>",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "npm install forever -g && npm install -g bower && npm install typescript -g",
    "build": "tsc -p ./",
    "prestart": "bower install && tsc -p ./",
    "start": "forever --minUptime 10000 -o output.log src/app.js",
    "stop": "forever stopall",
    "test": "tsc -p . && mocha --opts ./test-config/mocha.opts",
    "dev-test-watch": "mocha-typescript-watch -o ./test-config/mocha.opts",
    "create-docker": "docker build --no-cache -t node-simple-server . ",
    "run-docker": "docker run -it -p 8080:8080 -p 8000:8000 node-simple-server"
  },
  "dependencies": {
    "@types/chai": "^4.0.4",
    "@types/johnny-five": "^0.0.31",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/serialport": "^4.0.8",
    "@types/sinon": "^2.3.4",
    "@types/sinon-chai": "^2.7.29",
    "@types/socket.io": "^1.4.30",
    "chai": "^4.1.2",
    "johnny-five": "^0.11.6",
    "mime": "^2.0.2",
    "mocha": "^3.5.3",
    "mocha-typescript": "^1.1.8",
    "serialport": "^5.0.0",
    "sinon": "^3.3.0",
    "sinon-chai": "^2.13.0",
    "socket.io": "^2.0.3",
    "typescript": "^2.5.2"
  },
  "engines": {
    "node": "7.9.0"
  }
}
